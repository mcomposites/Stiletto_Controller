# Root screen manager
<MyScreenManager>:
    MainScreen:
        name: 'main'
    AdvancedSettingsScreen:
        name: 'advanced_settings'

# Main Screen layout
<MainScreen>:
    GridLayout:
        cols: 1
        spacing: 10
        padding: 10

    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 3
            spacing: 10
            padding: 10
            size_hint_y: None
            height: self.minimum_height
            id: controls_grid

        Button:
            text: 'Advanced Settings'
            size_hint_y: None
            height: 50
            on_press: root.switch_to_advanced_settings()

# Advanced Settings Screen layout
<AdvancedSettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            text: 'Log messages here...'
            readonly: True
            multiline: True
            size_hint_y: 0.8
        Button:
            text: 'Back to Main Screen'
            size_hint_y: None
            height: 50
            on_press: root.go_to_main()
